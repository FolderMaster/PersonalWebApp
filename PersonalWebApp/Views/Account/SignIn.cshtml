@model UserLogin
@{
    ViewBag.Title = "Sign In";
    ViewBag.LoginUserHeader = "active";
}
<form asp-action="SignIn" asp-controller="Account" asp-antiforgery="true">
    <input type="hidden" name="RefererUrl" value="@ViewBag.RefererUrl"/>
    <h1>Login.</h1>
    <table>
        <tr>
            <td>
                Name:
            </td>
            <td>
                <input asp-for="Name" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                Password:
            </td>
            <td>
                <input asp-for="Password" type="password" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input asp-for="RememberMe" type="checkbox" />Remember me.
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Sign In"/>
            </td>
            <td>
                <input type="reset" value="Reset"/>
            </td>
        </tr>
    </table>
</form>